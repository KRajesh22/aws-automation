{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "do_client_id": "",
    "do_api_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-1",
    "source_ami": "ami-4843740d",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ssh_timeout": "2m",
    "ami_name": "Node and Ruby - Ubuntu {{timestamp}}"
  },
  {
    "type": "digitalocean",
    "client_id": "{{user `do_client_id`}}",
    "api_key": "{{user `do_api_key`}}",
    "region_id": 3,
    "snapshot_name": "Node and Ruby - Ubuntu {{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo apt-get update"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/root_setup.sh",
        "scripts/setup.sh"
      ]
    }
  ],
  "post-processors": ["vagrant"]
}
